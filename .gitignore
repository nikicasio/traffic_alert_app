# NPM/Yarn/PNPM log files
/backend/npm-debug.log*
/backend/yarn-debug.log*
/backend/yarn-error.log*
/backend/pnpm-debug.log*

# Ignore all files in storage except for the .gitignore files
# This prevents accidental commits of user-uploaded files or sessions.
/backend/storage/*
!/backend/storage/.gitignore
/backend/storage/app/*
!/backend/storage/app/.gitignore
!/backend/storage/app/public/
/backend/storage/app/public/*
!/backend/storage/app/public/.gitignore
!/backend/storage/app/private/
/backend/storage/app/private/*
!/backend/storage/app/private/.gitignore
/backend/storage/framework/*
!/backend/storage/framework/.gitignore

